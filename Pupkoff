from math import log2

#n = list(map(float, input('Введите вероятности через пробел\n')))
n = [0.1, 0.25, 0.15, 0.15, 0.36, 0.05]
print('Энтропия:')
for i in n:
    print(f'-{i}log2({i})', end='')
print('=')
s = 0
for i in n:
    x = -round(i * log2(i), 2)
    if i != n[-1]:
        print(f'{x}+', end='')
    else:
        print(f'{x}', end='')
    s += x
print('=', s, sep='')
print('Избыточность:')
h = log2(len(n))
d = ((h - s) / h) * 100
print(f'{round(d)}%')
